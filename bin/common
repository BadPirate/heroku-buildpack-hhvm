#!/bin/bash

function fetch_package() {
  local engine="$1"
  local version="$2"
  local location="$3"

  mkdir -p "$location"

  local package="http://dl.hhvm.com/heroku/hhvm.tgz"

  curl "$package" -L -s -o - | tar xzf - -C "$location"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
      Darwin) sed -l "$c";;
      *)      sed -u "$c";;
  esac
}

function mktmpdir() {
  dir=$(mktemp -t php-$1-XXXX)
  rm -rf $dir
  mkdir -p $dir
  echo $dir
}
